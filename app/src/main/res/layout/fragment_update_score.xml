<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.UpdateScoreFragment">

    <EditText
        android:id="@+id/descriptionTextView"
        android:background="@drawable/square_border"
        android:layout_width="321dp"
        android:layout_height="161dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="82dp"
        android:ems="10"
        android:hint="Enter Description"
        android:inputType="textMultiLine"
        android:selectAllOnFocus="false"
        android:singleLine="false"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/Selector"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:src="@drawable/square_border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.468"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.753" />
    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/corvusImageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/PlusButton"
        android:layout_alignTop="@+id/leoImageView"
        android:adjustViewBounds="true"
        app:srcCompat="@mipmap/og_corvus_small" />

    <ImageView
        android:id="@+id/leoImageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="149dp"
        app:srcCompat="@mipmap/og_leo_small" />

    <ImageView
        android:id="@+id/lyraImageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/scorpiusImageView"
        android:layout_centerHorizontal="true"
        app:srcCompat="@mipmap/og_lyra_small" />

    <ImageView
        android:id="@+id/scorpiusImageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignEnd="@+id/MinusButton"
        android:layout_alignParentTop="true"
        android:layout_marginTop="51dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/og_scorpius_small" />

    <ImageView
        android:id="@+id/orionImageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/PlusButton"
        android:layout_alignTop="@+id/lyraImageView"
        app:srcCompat="@mipmap/og_orion_small" />

    <ImageView
        android:id="@+id/apusImageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignEnd="@+id/MinusButton"
        android:layout_alignTop="@+id/corvusImageView"
        android:adjustViewBounds="true"
        app:srcCompat="@mipmap/og_apus_small" />

    <EditText
        android:id="@+id/ScoreTextView"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_centerInParent="true"
        android:ems="10"
        android:inputType="number"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:text="0"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/PlusButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/HandOverButton"
        android:text="+"
        android:textSize="20sp" />

    <Button
        android:id="@+id/MinusButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/HandOverButton"
        android:text="-"
        android:textSize="20sp" />

    <Button
        android:id="@+id/HandOverButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="Update Score" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Select OG to add points to" />

</RelativeLayout>
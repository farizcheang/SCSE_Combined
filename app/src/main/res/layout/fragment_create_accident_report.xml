<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CreateAccidentReportFragment">

    <Spinner
        android:id="@+id/StudentSpinner"
        android:layout_width="153dp"
        android:layout_height="27dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/studentNameTextView"
        android:layout_marginEnd="26dp"
        android:visibility="gone" />


    <Spinner
        android:id="@+id/AccidentSpinner"
        android:layout_width="175dp"
        android:layout_height="31dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/studentNameTextView"
        android:layout_marginEnd="2dp" />

    <Button
        android:id="@+id/SendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:text="Send" />

    <EditText
        android:id="@+id/DescriptionText"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="107dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/InfoTextView"
        android:layout_width="51dp"
        android:layout_height="29dp"
        android:layout_alignBaseline="@+id/SendButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="49dp"
        android:text="info" />


    <EditText
        android:id="@+id/studentNameTextView"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="62dp"
        android:ems="10"
        android:hint="Student name"
        android:inputType="textMultiLine"
        android:maxLength="50"
        android:maxLines="2"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textSize="14sp" />
</RelativeLayout>